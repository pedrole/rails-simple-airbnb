<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Simple Airbnb</a>

      <%= link_to 'Add Flat', new_flat_path, class: 'btn btn-outline-primary my-2 my-sm-0 ms-2'  %>
    </div>
  </div>
</nav>


<div class="container mt-5">
<h2 class="mb-3"> All our Flats (<%=  @flats.count%>)</h2>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="card" style="width: 18rem;">

        <div class="card-body">
          <div class="bg-light">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="flex">
              <i class="fa-solid fa-people-line"></i>
              <span><%= flat.number_of_guests %></span>
              <i class="fa-solid fa-euro-sign"></i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>
          <div class="d-flex">
            <%= link_to 'More Info', flat_path(flat)  %>
            <%= link_to 'Edit Flat', edit_flat_path(flat), class: 'ms-3'  %>
            <%= link_to 'Delete Flat', flat_path(flat), class: 'ms-3', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %>
          </div>
        </div>
      </div>
    </div>

    <% end %>
  </div>
</div>
